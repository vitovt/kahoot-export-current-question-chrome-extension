{
  "manifest_version": 3,
  "name": "Kahoot Question Exporter",
  "short_name": "KahQ-Export",
  "description": "Export the current Kahoot question and answers to Markdown.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_title": "Copy Kahoot question",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  }
}
